<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<%= link_to 'Edit', edit_chatroom_path(@chatroom) %> |
<%= link_to 'Back', chatrooms_path %>

<div class="row">
    <div class="col-md-6 col-sm-12 col-xs-12">

    <div class="chat-panel panel panel-primary chat-boder chat-panel-head" >
        <div class="panel-heading">
            <i class="fa fa-comments fa-fw"></i>
            Chat Box
            <div class="btn-group pull-right">
                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-chevron-down"></i>
                </button>
                <ul class="dropdown-menu slidedown">
                    <li>
                        <a href="#">
                            <i class="fa fa-refresh fa-fw"></i>Refresh
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-check-circle fa-fw"></i>Available
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-times fa-fw"></i>Busy
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-clock-o fa-fw"></i>Away
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="#">
                            <i class="fa fa-sign-out fa-fw"></i>Sign Out
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="panel-body">
            <ul class="chat-box">
                <!-- <li class="left clearfix"></li>
                <li class="right clearfix"></li>
                <li class="left clearfix"></li>
                <li class="right clearfix"></li>
                <li class="left clearfix"></li>
                <li class="right clearfix"></li> -->

                <div data-behavior='messages' data-chatroom-id='<%=@chatroom.id %>'>
                  <% @messages.each do |message| %>
                    <%= render message %>
                  <% end %>
                </div>
            </ul>
        </div>

        <div class="panel-footer">
            <div class="input-group">
                <!-- <input id="btn-input" type="text" class="form-control input-sm" placeholder="Type your message to send..." />
                <span class="input-group-btn">
                    <button class="btn btn-success btn-sm" id="btn-chat">
                        <i class="fa fa-paper-plane"></i>
                    </button>
                </span> -->
                <%= form_for [@chatroom, Message.new] do |f| %>
                  <%= f.text_field :body, rows: 3, class: "form-control", placeholder: "Type your message to send...", autofocus: true %>
                <% end %>
            </div>
        </div>

    </div>

</div>
