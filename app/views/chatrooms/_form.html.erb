<%= form_for(chatroom) do |f| %>
  <% if chatroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chatroom.errors.count, "error") %> prohibited this chatroom from being saved:</h2>

      <ul>
      <% chatroom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="field form-group">
      <%= f.label :name, :class=>"sr-only" %>
      <%= f.text_field :name, :id=> "chatroom_name", :class=> "form-control", :placeholder=>"chatroom name", autofocus: true %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="actions" align="center">
      <%= f.button :submit, :id=> "reg_button", :class => "btn btn-success btn-md"%>
    </div>
  </div>
</div>
<% end %>
