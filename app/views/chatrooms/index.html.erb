<p id="notice"><%= notice %></p>

<h1 class="blockquote text-muted">Chatrooms</h1>
<div class="row">
  <div class="col-md-10">
    <table class="table">
      <thead>
        <tr calss="warning">
          <th class="text-muted">Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @chatrooms.each do |chatroom| %>
          <tr>
            <td><%= chatroom.name %></td>
            <td><%= link_to 'Show', chatroom, :class=>"btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_chatroom_path(chatroom), :class=>"btn btn-primary" %></td>
            <td><%= link_to 'Destroy', chatroom, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Join', chatroom_chatroom_users_path(chatroom), :class=>"btn btn-success", method: :post%></td>
            <td><%= link_to 'Leave', chatroom_chatroom_users_path(chatroom), :class=>"btn btn-warning", method: :delete%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Chatroom', new_chatroom_path, :class=>"btn btn-default" %>
